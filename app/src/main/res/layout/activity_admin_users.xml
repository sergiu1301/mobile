<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_screen_gradient"
    tools:context=".ui.activities.AdminUsersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_surface_card"
        android:padding="18dp"
        android:elevation="8dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvAdminTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Users"
            android:textColor="@color/brand_on_surface"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAdminStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading admin info..."
            android:textColor="@color/brand_muted"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddTripAdmin"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add a trip"
            android:textAllCaps="false"
            app:backgroundTint="@color/brand_secondary"
            app:cornerRadius="14dp"
            android:layout_marginTop="12dp"
            app:icon="@drawable/ic_weather_sun"
            app:iconTint="@color/white"
            app:iconPadding="12dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerUsers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        tools:listitem="@layout/item_user_row" />

</LinearLayout>
