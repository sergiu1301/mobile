<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/bg_surface_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/ic_fingerprint"
        android:contentDescription="@string/biometric_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:tint="@color/brand_primary" />

    <TextView
        android:text="Use Face ID / Fingerprint to login"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingTop="12dp"
        android:textColor="@color/brand_on_surface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUseBiometric"
        style="@style/Widget.MaterialComponents.Button"
        android:text="Authenticate"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/brand_primary"
        app:cornerRadius="12dp" />

    <TextView
        android:id="@+id/btnUsePassword"
        android:text="Use password instead"
        android:textColor="@color/brand_primary"
        android:paddingTop="8dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
