<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:padding="20dp"
    tools:context=".ui.activities.TripListActivity">

    <!-- CONTENT SCROLL -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnAddTrip"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- PAGE TITLE -->
            <TextView
                android:id="@+id/tvTripsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Trips"
                android:textColor="#1A1A1A"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"
                android:layout_gravity="center_horizontal"/>

            <!-- NETWORK STATUS -->
            <TextView
                android:id="@+id/tvNetworkStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checking connectionâ€¦"
                android:textColor="#666"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"/>

            <!-- LOADING -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <!-- EMPTY MESSAGE -->
            <TextView
                android:id="@+id/tvNoTrips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No trips available"
                android:textColor="#888"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:visibility="gone"/>

            <!-- TRIPS CONTAINER (cards added dynamically) -->
            <LinearLayout
                android:id="@+id/tripsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>

    <!-- ADD BUTTON FIXED AT BOTTOM RIGHT -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        app:backgroundTint="#4285F4"
        app:tint="@android:color/white"
        app:srcCompat="@drawable/ic_add" />

</RelativeLayout>
