<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F5F6FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Details"
            android:textColor="#1A1A1A"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="18dp" />

        <!-- CARD -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTripDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            app:cardElevation="10dp"
            app:cardCornerRadius="26dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Destination -->
                <TextView
                    android:id="@+id/tvDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Destination: Barcelona"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <!-- Dates -->
                <TextView
                    android:id="@+id/tvDates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2–10 Aug 2025"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp" />

                <!-- Notes -->
                <TextView
                    android:id="@+id/tvNotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visit Sagrada Familia and Park Güell"
                    android:textColor="#444"
                    android:textSize="16sp"
                    android:layout_marginBottom="18dp" />

                <!-- Weather -->
                <TextView
                    android:id="@+id/tvWeather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading weather..."
                    android:textColor="#2E7D32"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginBottom="22dp"/>

                <!-- EDIT BUTTON INSIDE CARD -->
                <Button
                    android:id="@+id/btnEditTrip"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Edit Trip"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/btn_black_bg"
                    android:elevation="6dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
