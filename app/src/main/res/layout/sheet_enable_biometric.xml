<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_dialog"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_fingerprint"
        android:contentDescription="@string/cd_fingerprint_icon"
        android:backgroundTint="#222222"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Biometric Login?"
        android:textColor="#111111"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Would you like to use your fingerprint or face to sign in faster next time?"
        android:textAlignment="center"
        android:textColor="#666666"
        android:textSize="15sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnEnable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable"
        android:textAllCaps="false"
        android:background="@drawable/btn_black_bg"
        android:backgroundTint="@null"
        android:textColor="#FFFFFF"
        android:paddingVertical="12dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/btnNotNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not now"
        android:textColor="#2962FF"
        android:layout_marginTop="16dp"
        android:textSize="15sp" />

</LinearLayout>
