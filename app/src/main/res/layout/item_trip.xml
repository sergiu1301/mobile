<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="6dp"
    card_view:cardCornerRadius="18dp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/white"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_weather_sun"
                android:contentDescription="Trip icon"
                app:tint="@color/brand_primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvTripTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trip Title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/brand_on_surface" />

                <TextView
                    android:id="@+id/tvTripDestination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Destination"
                    android:textSize="15sp"
                    android:textColor="@color/brand_muted"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnDeleteTrip"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_round_button"
                android:backgroundTint="@color/brand_surface"
                android:contentDescription="Delete trip"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="@color/brand_accent" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTripDates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Range"
            android:textSize="14sp"
            android:textColor="@color/brand_muted"
            android:layout_marginTop="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/ivWeatherIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_weather_unknown"
                app:tint="@color/brand_primary" />

            <TextView
                android:id="@+id/tvTripWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weather info"
                android:textSize="14sp"
                android:textColor="@color/brand_primary" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
