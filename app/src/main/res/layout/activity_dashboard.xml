<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#FAFAFA"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvWelcome"
        android:text="Welcome back, Traveler! ðŸŒ"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvGuestBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You are browsing as Guest â€” sign in to save your trips âœˆï¸"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:textAlignment="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvRole"
        android:text="Role: user"
        android:textSize="16sp"
        android:textColor="#666"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnGoToTrips"
        android:text="My Trips"
        android:background="@drawable/btn_black_bg"
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnManageUsers"
        android:text="Manage Users (Admin)"
        android:background="@drawable/btn_black_bg"
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnLogout"
        android:background="@drawable/btn_black_bg"
        android:text="Settings"
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp" />
</LinearLayout>
