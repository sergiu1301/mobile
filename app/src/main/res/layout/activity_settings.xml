<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_screen_gradient"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSettingsTitle"
        android:text="Settings"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/sectionBiometric"
        android:orientation="horizontal"
        android:padding="18dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_surface_card"
        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Use biometrics"
            android:textSize="16sp"
            android:textColor="@color/brand_on_surface"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/switchBiometrics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/brand_primary"
            android:trackTint="@color/purple_200" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="18dp"
        android:background="@drawable/bg_surface_card"
        android:elevation="6dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icLogout"
            android:src="@drawable/ic_logout"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            app:tint="@color/brand_accent" />

        <TextView
            android:id="@+id/btnLogout"
            android:text="Log out"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/brand_accent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
